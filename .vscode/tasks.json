{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Check Git remotes",
			"type": "shell",
			"command": "git",
			"args": [
				"remote",
				"-v"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Git Add All",
			"type": "shell",
			"command": "git",
			"args": [
				"add",
				"-A"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Git Commit",
			"type": "shell",
			"command": "git",
			"args": [
				"commit",
				"-m",
				"feat(ui): active-section highlight, smooth anchor scroll, section reveal; background floating red orbs; remove card top red line"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Git Push",
			"type": "shell",
			"command": "git",
			"args": [
				"push",
				"-u",
				"origin",
				"master"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Git Add All",
			"type": "shell",
			"command": "git",
			"args": [
				"add",
				"-A"
			],
			"isBackground": false,
			"group": "build"
		}
	]
}